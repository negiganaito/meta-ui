{
  "name": "@meta-ui",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf \"**/node_modules\"",
    "fresh": "pnpm clean && pnpm i",
    "nuke": "rimraf pnpm-lock.yaml && pnpm fresh",
    "format": "prettier",
    "format:check": "pnpm format --check --debug-check",
    "format:fix": "pnpm format --write",
    "lint": "eslint --ext mjs,js,ts,tsx",
    "lint:fix": "pnpm lint --fix",
    "commitlint": "commitlint",
    "syncpack:fix": "syncpack format && syncpack fix-mismatches",
    "fix": "pnpm lint:fix . && pnpm remark:fix . && pnpm format:fix . && pnpm syncpack:fix",
    "prepare": "husky install",
    "remark": "remark",
    "remark:fix": "pnpm remark -o --",
    "dev": "cd app/business && pnpm dev",
    "create": "plop --plopfile ./generator/plopfile.js --dest ."
  },
  "dependencies": {
    "react": "git://github.com/tienlx97/react-experimental.git#www",
    "react-dom": "git://github.com/tienlx97/react-dom-experimental.git#www",
    "scheduler": "0.22.0",
    "@meta-plugins/configs-commitlint": "workspace:*",
    "@meta-plugins/configs-remark": "workspace:*",
    "@meta-plugins/configs-syncpack": "workspace:*",
    "@meta-plugins/configs-prettier": "workspace:*",
    "@meta-plugins/configs-eslint": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.8",
    "@commitlint/cli": "19.5.0",
    "eslint": "^8.55.0",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "^2.8.3",
    "syncpack": "13.0.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-config-prettier": "^9.1.0",
    "remark": "15.0.1",
    "remark-cli": "12.0.1",
    "rimraf": "6.0.1",
    "@babel/eslint-parser": "7.23.3",
    "@babel/preset-react": "^7.23.3",
    "plop": "4.0.1",
    "node-plop": "0.32.0",
    "inquirer-search-list": "1.2.6"
  }
}
